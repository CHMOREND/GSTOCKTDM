<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".activityEntreeMarchandise">

    <Button
        android:id="@+id/btRetourClient"
        android:layout_width="270dp"
        android:layout_height="77dp"
        android:backgroundTint="#AAC886"
        android:text="@string/retourclient"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCommandeFournisseur"
        app:layout_constraintVertical_bias="0.502" />

    <Button
        android:id="@+id/btCommandeFournisseur"
        android:layout_width="270dp"
        android:layout_height="77dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="#AAC886"
        android:text="@string/commandefournisseur"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>