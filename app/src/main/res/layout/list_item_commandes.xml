<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/designationarticlecommande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DÃ©signation"
            android:textColor="@color/design_default_color_primary"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/eanarticlecommande"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="code EAN"
            android:textColor="@color/design_default_color_primary"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/numeroarticlecommande"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="1dp"
            android:text="Num. stock"
            android:textColor="@color/design_default_color_primary"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="96dp">


            <TextView
                android:id="@+id/qtcommande"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="1"
                android:textColor="@color/design_default_color_primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/qtlivre"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="0"
                android:textColor="@color/design_default_color_primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/solde"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>